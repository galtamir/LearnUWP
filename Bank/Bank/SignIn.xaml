<ContentDialog
    x:Class="Bank.SignIn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bank"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="SignIn"
    PrimaryButtonText="Singin"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <StackPanel>
        <TextBox x:Name="userNameTextBox" PlaceholderText="User Name" Margin="10" />
        <PasswordBox x:Name="passwordTextBox" PlaceholderText="Password" Margin="10"/>
        <CheckBox Content="Remember me" />
        <TextBlock x:Name="errorTextBlock" Foreground="Red" />
    </StackPanel>
</ContentDialog>
